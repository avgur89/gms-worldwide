mixin circle-play(tag, id, href, className)
    mixin circle-svg
        svg(version='1.1', xmlns='http://www.w3.org/2000/svg', xmlns:xlink='http://www.w3.org/1999/xlink', x='0px', y='0px', viewbox='0 0 130 130', style='enable-background:new 0 0 130 130;', xml:space='preserve')
            defs
                clipPath(id=id)
                    circle(cx="65" cy="65" r="56")
            g(clip-path=`url(#${id})`)
                circle(cx="65" cy="65" r="56")
                path(d='M76.7,64.7l-17,10v-20L76.7,64.7z')

    if (tag === 'a')
        a.circle_play(class=className ? className : '', href=`${href ? href : '#'}`, data-fancybox='')
            +circle-svg
            if block
                block
    else
        button.circle_play(class=className ? className : '', data-fancybox='')
            +circle-svg
            if block
                block
mixin link-balls(text)
    -
        var hasBalls = attributes.balls !== undefined ? attributes.balls :  true;
    .link_with_balls(class!=attributes.className, data-current-text= text, data-toggle-text!=attributes.toggleText)
        .drawn_text.drawn_text--small
            .drawn_text__balls_overflow
                if(hasBalls)
                    .drawn_text__balls(data-color!=attributes.colorBalls)
            .drawn_text__overflow
                a(href= attributes.href ? attributes.href : '#')
                    div.hover
                        if block
                            block
                        span= text
                    div
                        if block
                            block
                        span= text